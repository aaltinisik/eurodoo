                                    <span class="o_form_label">Firebase title web</span>
                                </div>

                                <div class="o_setting_left_pane">
                                    <field name="firebase_title_web"/>
                                </div>
                                                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Firebase body web</span>
                                </div>
                                <div class="o_setting_left_pane">
                                    <field name="firebase_body_web"/>
                                </div>
                                                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Firebase icon web</span>
                                </div>
                                <div class="o_setting_left_pane">
                                    <field name="firebase_icon_web"/>
                                </div>
                                                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Firebase image web</span>
                                </div>
                                <div class="o_setting_left_pane">
                                    <field name="firebase_image_web"/>
                                </div>
                                                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Firebase action web</span>
                                </div>
                                <div class="o_setting_left_pane">
                                    <field name="firebase_action_web"/>
                                </div>

                            </div>
                        </div>
                </div> 
        </field>
    </record>
</odoo>
