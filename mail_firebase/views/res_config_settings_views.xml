<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_mail_firebase" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mail.farebase</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Mail Firebase" string="Mail Firebase" data-key="mail_firebase">
                        <h2>Mail Firebase</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-12 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <div class="content-group mt16">
                                        <label for="mail_firebase_key" class="col-6 col-lg-6 o_light_label"/>
                                        <field name="mail_firebase_key"/>
                                    </div>

                                    <div class="content-group mt16">
                                        <label for="mail_firebase_apiKey" class="col-6 col-lg-6 o_light_label"/>
                                        <field name="mail_firebase_apiKey"/>
                                    </div>

                                    <div class="content-group mt16">
                                        <label for="mail_firebase_authDomain" class="col-6 col-lg-6 o_light_label"/>
                                        <field name="mail_firebase_authDomain"/>
                                    </div>

                                    <div class="content-group mt16">
                                        <label for="mail_firebase_databaseURL" class="col-6 col-lg-6 o_light_label"/>
                                        <field name="mail_firebase_databaseURL"/>
                                    </div>

                                    <div class="content-group mt16">
                                        <label for="mail_firebase_projectId" class="col-6 col-lg-6 o_light_label"/>
                                        <field name="mail_firebase_projectId"/>
                                    </div>

                                    <div class="content-group mt16">
                                        <label for="mail_firebase_storageBucket" class="col-6 col-lg-6 o_light_label"/>
                                        <field name="mail_firebase_storageBucket"/>
                                    </div>

                                    <div class="content-group mt16">
                                        <label for="mail_firebase_messagingSenderId" class="col-6 col-lg-6 o_light_label"/>
                                        <field name="mail_firebase_messagingSenderId"/>
                                    </div>

                                    <div class="content-group mt16">
                                        <label for="mail_firebase_appId" class="col-6 col-lg-6 o_light_label"/>
                                        <field name="mail_firebase_appId"/>
                                    </div>

                                    <div class="content-group mt16">
                                        <label for="mail_firebase_measurementId" class="col-6 col-lg-6 o_light_label"/>
                                        <field name="mail_firebase_measurementId"/>
                                    </div>

                                    <div class="text-muted">
                                        <a href="https://www.youtube.com/watch?v=2QHKCFsShXM" class="oe_link" target="_blank">
                                            <i class="fa fa-arrow-right"></i> Youtube tutorial
                                        </a>
                                        <a href="https://console.firebase.google.com/?pli=1" class="oe_link" target="_blank">
                                            <i class="fa fa-arrow-right"></i> 1.Create Server key 2.Setup your project firebase and create web-app
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
        </field>
    </record>
</odoo>
