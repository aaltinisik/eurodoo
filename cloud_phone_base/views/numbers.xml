<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_cloud_phone_number_form" model="ir.ui.view">
            <field name="name">cloud.phone.number.view.form</field>
            <field name="model">cloud.phone.number</field>
            <field name="arch" type="xml">
                <form string="Number">
                    <group>
                        <field name="connector_id"/>
                        <field name="connector_cloud_phone_vendor" invisible="1"/>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="tel"/>
                        <field name="lead_generation"/>

                        <field name="recording_in" attrs="{'invisible':[('connector_cloud_phone_vendor', '!=', 'mts')]}"/>
                        <field name="recording_out" attrs="{'invisible':[('connector_cloud_phone_vendor', '!=', 'mts')]}"/>

                        <field name="extension" attrs="{'invisible':[('connector_cloud_phone_vendor', '!=', 'mango')]}"/>
                        <field name="comment" attrs="{'invisible':[('connector_cloud_phone_vendor', '!=', 'mango')]}"/>
                        <field name="schema_name" attrs="{'invisible':[('connector_cloud_phone_vendor', '!=', 'mango')]}"/>
                        <field name="protocol" attrs="{'invisible':[('connector_cloud_phone_vendor', '!=', 'mango')]}"/>
                    </group>
                    <group>
                        <field name="call_ids"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_cloud_phone_number_tree" model="ir.ui.view">
            <field name="name">cloud.phone.number.view.tree</field>
            <field name="model">cloud.phone.number</field>
            <field name="arch" type="xml">
                <tree string="Numbers">
                    <field name="connector_id"/>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="tel"/>
                </tree>
            </field>
        </record>

        <record id="action_cloud_phone_number" model="ir.actions.act_window">
            <field name="name">Numbers</field>
            <field name="res_model">cloud.phone.number</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>